{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Debug both",
            "configurations": ["ng serve", "Python Debugger: FastAPI"]
        }
    ],
    "configurations": [
        {
            "name": "ng serve",
            "type": "msedge",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/angular-src"
          },
          {
            "name": "ng test",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:9876/debug.html",
            "webRoot": "${workspaceFolder}/angular-src",
            "sourceMapPathOverrides": {
              "./src/*": "${workspaceFolder}/angular-src/src/*"
            }
          },
          {
            "name": "ng e2e",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/angular-src/node_modules/protractor/bin/protractor",
            "args": ["${workspaceFolder}/angular-src/e2e/protractor.conf.js"]
          },
                {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.main:app",
                "--port", "8000"
            ],
            "jinja": true
        }
    ]
}